@model AnimalFarm.Models.ViewModels.HomeCreateVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Nytt Djur</title>
</head>
<body>
    <h1>Skapa nytt djur</h1>
    <form app-controller="home" asp-action="create">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
        <br />
        <label asp-for="AnimalType"></label>
        <input asp-for="AnimalType" />
        <span asp-validation-for="AnimalType"></span>
        <br />
        <label asp-for="Temper"></label>
        <input asp-for="Temper" />
        <span asp-validation-for="Temper"></span>
        <br />
        <input type="submit" value="Skapa"/>
    </form>
</body>
</html>